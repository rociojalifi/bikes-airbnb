<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-home">
  <a class="navbar-brand" href="/">
    <%= image_tag "logo.png", alt: "alttext", class: "logo" %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
          <%= link_to "Rent your bike", new_bike_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "See All Bikes", bikes_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown ml-3">
          <%= image_tag "https://images.unsplash.com/photo-1584999734482-0361aecad844?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Bikes", my_bikes_path, class: "dropdown-item" %>
            <%= link_to "My Bookings", new_bike_path, class: "dropdown-item" %>
            <%= link_to "Edit Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link btn-login" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn-signup" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>