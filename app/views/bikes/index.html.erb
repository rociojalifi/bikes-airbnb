<div class="bikes-layout border-bottom border-top">
  <div>
    <h1 class="title-card" style="font-family: 'Castoro', serif">
      Find the <strong id="title-index">perfect bike</strong>
      <strong id="title-index">to enjoy</strong> the city
      <i class="fas fa-heart" style="font-size: 25px"></i>
    </h1>
    <div class="cards-position">
      <% @bikes.each do |bike| %>
      <div class="card-bike-container">
        <div class="card-bike" id="">
          <% if bike.photo.attached? %> <%= cl_image_tag bike.photo.key %> <%
          end %>
          <div class="card-content">
            <div class="card-description">
              <h5><strong><%= bike.description %></strong></h5>
              <h5 class="card-price">
                <strong>â‚¬<%= bike.price %> / per day</strong>
              </h5>
            </div>

            <p id="city"><%= bike.location %></p>
            <p>Contact: <%= bike.user.email %></p>
            <div class="user-button">
              <h5 class="card-title">
                <%= link_to 'Book', bike_path(bike), class:'btn btn-primary'%>
              </h5>
              <div class="user-button-actions">
                <% if policy(bike).edit? %> <%= link_to 'Edit',
                edit_bike_path(bike), class:'btn btn-primary' %> <% end %> <% if
                policy(bike).destroy? %> <%= link_to 'Delete', bike_path(bike),
                method: :delete, remote: true, data: { confirm: "Are you sure you want to
                delete this bike?"}, class: 'btn btn-danger' %> <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    style="width: 50vw; height: calc(100vh - 80px)"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
